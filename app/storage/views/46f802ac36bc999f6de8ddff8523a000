        <?php $i = 1; 
         $totalsalary = 0.00;
         $totalearning = 0.00;
         $totalhourly = 0.00;
         $totaldaily = 0.00;
         $totalallowance = 0.00;
         $totalnontaxable = 0.00;
         $totalrelief = 0.00;
         $totalgross = 0.00;
         $totaltax = 0.00;
         $totaltaxrelief = 0.00;
         $totalpaye = 0.00;
         $totalnssf = 0.00;
         $totalnhif = 0.00;
