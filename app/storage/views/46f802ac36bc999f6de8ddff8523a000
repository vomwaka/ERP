       displaydata(); 

      function displaydata(){
       $.ajax({
                      url     : "<?php echo URL::to('showrecord'); ?>",
                      type    : "POST",
                      async   : false,
                      data    : {
                              'period1'  : p1,
                              'period2'  : p2,
                              'period3'  : p3
                      },
                      success : function(s){
                      $('.displayrecord').html(s)
                      }        
       });
       }
      });

    </script>
