<script type="text/javascript">

$(document).ready(function(){
    $("#discount").keypress(function(){
    var pay = <?php echo $total ?>-this.value;
    $("#payable").val(pay);
    grandTotal();
    });
    
    $("#discount").keyup(function(){
    var pay = <?php echo $total ?>-this.value;
    $("#payable").val(pay);
    grandTotal();
    });
});

</script>

