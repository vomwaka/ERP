      <thead>

        <th>#</th>
        <th>Employee</th>
        <th>Earning Type</th>
        <th>Amount</th>
        <th>Action</th>

      </thead>

      

      <tbody>

        <?php $i = 1; ?>
        <?php foreach($earnings as $earning): ?>

        <tr>

          <td> <?php echo $i; ?></td>
          <?php if($earning->middle_name == null || $earning->middle_name == ''): ?>
          <td><?php echo $earning->first_name.' '.$earning->last_name; ?></td>
          <?php else: ?>
          <td><?php echo $earning->first_name.' '.$earning->middle_name.' '.$earning->last_name; ?></td>
